<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="kanbanlitegradle.controller.RegisterController"
            prefWidth="500" prefHeight="400">

    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets top="40" bottom="40" left="50" right="50"/>
            </padding>

            <Label text="📝 Registrasi Akun"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <TextField fx:id="usernameField" promptText="Username" prefWidth="250"/>
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250"/>
            <ComboBox fx:id="roleComboBox" prefWidth="250"/>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="backButton" text="🔙 Kembali"
                        onAction="#handleBack"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 14;" />

                <Button fx:id="registerButton" text="Daftar"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 14;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>