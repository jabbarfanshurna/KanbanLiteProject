<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="kanbanlitegradle.controller.StartMenuController"
            prefWidth="600" prefHeight="400">

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets top="40" bottom="40" left="60" right="60"/>
            </padding>

            <Label text="📋 Kanban Lite" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <Button fx:id="loginButton" text="🔐 Login" prefWidth="200"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" />

            <Button fx:id="registerButton" text="📝 Registrasi" prefWidth="200"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" />

            <Button fx:id="exitButton" text="❌ Keluar" prefWidth="200"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" />
        </VBox>
    </center>
</BorderPane>